<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/simple_border_shape"
    android:padding="5dp"
    android:id="@+id/ll_sideline_item"
    android:layout_margin="5dp"
    >
    <RadioButton
        android:id="@+id/selection"
        android:clickable="false"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:scaleX="0.8"
        android:scaleY="0.8"
        android:src="@mipmap/white_borderd_red_circle"/>
    <ImageView
        android:id="@+id/image"
        android:scaleType="fitXY"
        android:layout_width="100dp"
        android:layout_height="70dp"
        android:src="@mipmap/map_img"/>


        <TextView
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="kjk sdk jksjnk kijzlxz 242 2j41n23 2j321 32 3jjb3j123n123"
            android:textSize="12sp"
            android:padding="0dp"
            android:layout_margin="5dp"
            android:textAlignment="center"
            android:maxLines="2"
            android:fontFamily="@font/abrilfatface_regular_maintitle"
            android:textAllCaps="false"
            android:textColor="@color/blackColor"
            />
        <TextView
            android:id="@+id/price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="+Rx. 199 each"
            android:textSize="11sp"
            android:textAlignment="center"
            android:maxLines="2"
            android:fontFamily="@font/frederickathegreat_regular_blurr"
            android:textAllCaps="false"
            android:textColor="@color/orangeColor"
            />
        <LinearLayout
            android:id="@+id/ll_add_minus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:visibility="gone"
            android:paddingBottom="5dp"
            android:paddingTop="5dp">

                <ImageView
                    android:id="@+id/minus"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:src="@mipmap/remove_icon"
                    android:padding="5dp"
                    app:tint="@color/orangeColor" />
            <TextView
                android:id="@+id/tv_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"
                android:textSize="17sp"
                android:textAlignment="center"
                android:maxLines="2"
                android:maxLength="5"
               android:paddingStart="5dp"
                android:paddingEnd="5dp"
                android:fontFamily="@font/josefinsans_semibold_login"
                android:textAllCaps="false"
                android:textColor="@color/blackColor"
                />
            <ImageView
                android:id="@+id/add"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@mipmap/add_icon"
                android:padding="5dp"
                app:tint="@color/orangeColor" />

        </LinearLayout>


</LinearLayout>
