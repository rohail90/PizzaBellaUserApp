<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#ffffffff">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Delete Item"
        android:id="@+id/title_dialog"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginBottom="8dp"
        android:textSize="18sp"
        android:textColor="#ff000000"
        android:gravity="center_horizontal" />

    <RelativeLayout
        android:id="@+id/rating_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title_dialog">

        <TextView
            android:id="@+id/title_rating"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:layout_marginBottom="10dp"
            android:gravity="center"
            android:text="Do you want to delete this cart item?"
            android:textColor="#292828"
            android:textSize="15sp"
            android:visibility="visible" />


    </RelativeLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/rating_layout"
        android:layout_centerHorizontal="true">

    <TextView
        android:id="@+id/dismiss_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:background="@drawable/dialog_button_yellow_background"
        android:text="No, Cancel"
        android:layout_marginBottom="20dp"
        android:paddingStart="15dp"
        android:paddingEnd="15dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:layout_marginRight="20dp"
        android:textColor="@color/red"
        android:textSize="16sp" />
    <TextView
        android:id="@+id/ok_txt"
        android:layout_toRightOf="@id/dismiss_txt"
        android:layout_width="wrap_content"
        android:layout_marginStart="20dp"
        android:textAlignment="center"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rating_layout"
        android:background="@drawable/dialog_button_background"
        android:text="Yes Delete"
        android:layout_marginBottom="20dp"
        android:paddingStart="15dp"
        android:paddingEnd="15dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:textColor="@color/white"
        android:textSize="16sp" />
    </LinearLayout>

</RelativeLayout>