<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/red_border_shape"
    android:weightSum="10"
    android:paddingBottom="10dp"

    >
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="G-14/4 Islamabad"
        android:id="@+id/shortAddress"
        android:layout_margin="7dp"
        android:textSize="22sp"
        android:padding="5dp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:fontFamily="@font/open_sans_bold"
        android:textAllCaps="false"
        android:textColor="@color/orangeColor"
        android:background="@color/yellowColor"
        />
    <ImageView
        android:id="@+id/map"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:scaleType="fitXY"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:src="@mipmap/map_img"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=" cnkzcns 242 2j41n23 2j321 32 3jjb3j123n123"
            android:textSize="14sp"
            android:id="@+id/longAddress"
            android:padding="0dp"
            android:layout_margin="5dp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:maxLines="2"
            android:fontFamily="@font/open_sans_bold"
            android:textAllCaps="false"
            android:textColor="@color/blackColor"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="051878798789"
            android:id="@+id/phoneNumber"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:maxLines="2"
            android:fontFamily="@font/open_sans_bold"
            android:textAllCaps="false"
            android:textColor="@color/blackColor"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:id="@+id/callLL"
                android:orientation="horizontal"
                android:background="@color/yellow"
                android:gravity="center"
                android:layout_marginEnd="3dp"
                >
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@mipmap/call2_icon"
                    android:id="@+id/calBtn"
                    android:padding="2dp"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_marginStart="2dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@color/yellow"
                android:gravity="center"
                android:id="@+id/directionsLL"
                >
                <ImageView
                    android:layout_width="38dp"
                    android:layout_height="38dp"
                    android:src="@mipmap/direction_icon"
                    android:padding="3dp"
                    android:layout_margin="2dp"
                    android:id="@+id/directionsBtn"
                   />
            </LinearLayout>
        </LinearLayout>



    </LinearLayout>





</LinearLayout>
