<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:id="@+id/ll_combo_item"
    android:background="@drawable/simple_border_shape"
    android:padding="5dp"
    android:layout_marginBottom="10dp"
    android:gravity="center"

    >
    <ImageView
        android:id="@+id/image"
        android:layout_margin="10dp"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:padding="5dp"
        android:scaleType="fitXY"
        android:src="@mipmap/map_img"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="5dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
       >

        <TextView
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Combo 1"
            android:textSize="14sp"
            android:padding="0dp"
            android:textStyle="bold"
            android:textAlignment="textStart"
            android:maxLines="2"
            android:fontFamily="@font/abrilfatface_regular_maintitle"
            android:textAllCaps="false"
            android:textColor="@color/blackColor"
            />
        <TextView
            android:id="@+id/description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="description , 1pc , etc etc..."
            android:textSize="12sp"
            android:padding="0dp"
            android:textStyle="bold"
            android:textAlignment="textStart"
            android:maxLines="4"
            android:fontFamily="@font/josefinsans_regular_login"
            android:textAllCaps="false"
            android:textColor="@color/blackColor"
            />
        <com.orderpizaonline.pizzabella.utils.NonScrollListView
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:id="@+id/coldDrinkListView"
            />

        <TextView
            android:id="@+id/price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="+Rs 69"
            android:textSize="14sp"
            android:padding="0dp"
            android:textStyle="bold"
            android:textAlignment="textStart"
            android:maxLines="2"
            android:fontFamily="@font/frederickathegreat_regular_blurr"
            android:textAllCaps="false"
            android:textColor="@color/red"
            />




    </LinearLayout>





</LinearLayout>
